<UserControl x:Class="overtime_calculator.Views.OvertimeRecordListingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:overtime_calculator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Registros de Horas Extras" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
            
            <TextBlock Text="Visualize todos os seus registros" 
                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Lista de Registros -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding OvertimeRecords}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,0,15" Padding="20" UniformCornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Data -->
                                <StackPanel Grid.Column="0" Margin="0,0,20,0" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Calendar" 
                                                            Width="30" 
                                                            Height="30"
                                                            Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    
                                    <TextBlock Text="{Binding RecordDate, StringFormat='{}{0:dd/MM}'}" 
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,0"/>
                                    
                                    <TextBlock Text="{Binding RecordDate, StringFormat='{}{0:yyyy}'}" 
                                               FontSize="10"
                                               HorizontalAlignment="Center"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                </StackPanel>

                                <!-- Horários -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <materialDesign:PackIcon Kind="ClockStart" 
                                                                 Width="18" 
                                                                 Height="18"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="Entrada:" 
                                                   FontWeight="SemiBold" 
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding EntryTime, StringFormat='{}{0:HH:mm}'}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ClockEnd" 
                                                                 Width="18" 
                                                                 Height="18"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="Saída:" 
                                                   FontWeight="SemiBold" 
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding ExitTime, StringFormat='{}{0:HH:mm}'}"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Ações -->
                                <StackPanel Grid.Column="2" 
                                            Orientation="Horizontal" 
                                            VerticalAlignment="Center">
                                    
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Editar"
                                            Margin="0,0,5,0">
                                        <materialDesign:PackIcon Kind="Edit"/>
                                    </Button>
                                    
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Excluir">
                                        <materialDesign:PackIcon Kind="Delete"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>