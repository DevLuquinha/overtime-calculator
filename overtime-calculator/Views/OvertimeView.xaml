<UserControl x:Class="overtime_calculator.Views.OvertimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Background="#F0F0F0">
        <materialDesign:Card Width="600" Padding="32" VerticalAlignment="Center" UniformCornerRadius="10">
            <StackPanel>
                <TextBlock Text="Registrar Horas Extras" 
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                           Margin="0,0,0,20"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                <DatePicker SelectedDate="{Binding RecordDate}"
                            Width="250"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,20"
                            materialDesign:HintAssist.Hint="Selecione a Data"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <materialDesign:TimePicker Grid.Column="0"
                                               SelectedTime="{Binding EntryTime}"
                                               Is24Hours="True"
                                               materialDesign:HintAssist.Hint="Hora de Entrada"
                                               Style="{StaticResource MaterialDesignFloatingHintTimePicker}" />

                    <materialDesign:TimePicker Grid.Column="2"
                                               SelectedTime="{Binding ExitTime}"
                                               Is24Hours="True"
                                               materialDesign:HintAssist.Hint="Hora de Saída"
                                               Style="{StaticResource MaterialDesignFloatingHintTimePicker}" />
                </Grid>

                <TextBlock Text="Justificativa / Descrição" 
                           Style="{StaticResource MaterialDesignTextBlock}" 
                           Margin="0,0,0,20"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                <TextBox Text="{Binding Description}"
                         Height="80"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         Margin="0,0,0,30"
                         materialDesign:HintAssist.Hint="Ex: Fiquei até tarde montando àrvore de natal..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Registrar"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            ToolTip="Registrar horas extras."/>
                </StackPanel>

            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>