<Window x:Class="overtime_calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:overtime_calculator"
        xmlns:views="clr-namespace:overtime_calculator.Views"
        xmlns:viewmodels="clr-namespace:overtime_calculator.ViewModels"
        mc:Ignorable="d"
        Title="Calculadora de Horas Extras" 
        Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="400"/>
            <ColumnDefinition Width="2*" MinWidth="600"/>
        </Grid.ColumnDefinitions>

        <!-- Record Section -->
        <views:OvertimeView Grid.Column="0" 
                            DataContext="{Binding OvertimeViewModel}"/>

        <!-- Listing Section -->
        <views:OvertimeRecordListingView Grid.Column="1" 
                                         DataContext="{Binding OvertimeRecordListingViewModel}"/>
    </Grid>
</Window>